<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
   <item>
       <shape
           >
    <solid android:color="@color/negro"/>

    <padding android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />

    <corners android:bottomRightRadius="20dp" android:bottomLeftRadius="20dp"
        android:topLeftRadius="20dp" android:topRightRadius="20dp"/>
       </shape>
   </item>
    <item
        android:left="1dp"
        android:top="1dp">
        <shape
            >
            <solid android:color="#ffffff"/>

            <padding android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />

            <corners android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/>
        </shape>
    </item>
    <item android:right="1dp"
        android:bottom="1dp">
        <shape>
        <gradient
            android:angle="90"
            android:endColor = "@color/gris"
            android:centerColor="@color/grisclaro"
            android:startColor="@color/negro"
            android:type="linear"/>

        <padding android:left="0dp"
            android:top="0dp"
            android:right="0dp"
            android:bottom="0dp"
            />

        <corners android:bottomRightRadius="20dp" android:bottomLeftRadius="20dp"
            android:topLeftRadius="20dp" android:topRightRadius="20dp"/>
        </shape>
    </item>

</layer-list>
