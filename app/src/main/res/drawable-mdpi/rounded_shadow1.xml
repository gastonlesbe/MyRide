<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
   <item>
       <shape
           >
    <solid android:color="#DDE3F6"/>

    <padding android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />

    <corners android:bottomRightRadius="20dp"
        android:bottomLeftRadius="20dp"
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"/>
       </shape>
   </item>
    <item
        android:left="1dp"
        android:top="1dp">
        <shape
            >
            <solid android:color="#0055b1"/>

            <padding android:left="0dp"
                android:top="0dp"
                android:right="3dp"
                android:bottom="3dp"
                />

            <corners android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/>
        </shape>
    </item>

    <item android:right="1dp"
        android:bottom="1dp">
        <shape>
            <solid android:color="#ffffff"/>

            <padding android:left="5dp"
            android:top="5dp"
            android:right="5dp"
            android:bottom="5dp"
            />

        <corners android:bottomRightRadius="20dp"
            android:bottomLeftRadius="20dp"
            android:topLeftRadius="20dp"
            android:topRightRadius="20dp"/>
        </shape>
    </item>

    <item android:right="1dp"
        android:bottom="1dp">
        <shape>
            <gradient
                android:angle="90"
                android:endColor = "#F3EDE3"
                android:centerColor="#F3EDE3"
                android:startColor="#F3EDE3"
                android:type="linear"/>

            <padding android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />

            <corners android:bottomRightRadius="20dp"
                android:bottomLeftRadius="20dp"
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp"/>
        </shape>
    </item>
</layer-list>
