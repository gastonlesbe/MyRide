<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="@string/Newcar"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:id="@+id/lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/rounded_shadow1"
        android:gravity="top|center"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/linMarca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="@string/selectMake"
                android:textSize="16sp"
                android:textStyle="bold|italic" />

            <ImageView

                android:id="@+id/imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0"
                android:src="@mipmap/alfaromeo" />

            <Spinner

                android:id="@+id/spnAgregarMarca"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <EditText

                android:id="@+id/editTextAgregarPatente"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/underline"
                android:ems="10"
                android:focusable="true"
                android:gravity="center"
                android:hint="@string/patente"
                android:inputType="textCapCharacters"
                android:textStyle="italic"
                tools:ignore="TextFields,RtlHardcoded" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/km"
            android:textSize="16sp"
            android:textStyle="bold|italic" />


        <LinearLayout
            android:id="@+id/linKm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <NumberPicker
                android:id="@+id/NumberPicker01"
                android:layout_width="40dp"
                android:layout_height="70dp" />

            <NumberPicker
                android:id="@+id/NumberPicker02"
                android:layout_width="40dp"
                android:layout_height="70dp" />


            <NumberPicker
                android:id="@+id/NumberPicker03"
                android:layout_width="40dp"
                android:layout_height="70dp" />


            <NumberPicker
                android:id="@+id/NumberPicker04"
                android:layout_width="40dp"
                android:layout_height="70dp" />

            <NumberPicker
                android:id="@+id/NumberPicker05"
                android:layout_width="40dp"
                android:layout_height="70dp" />

            <NumberPicker
                android:id="@+id/NumberPicker06"
                android:layout_width="40dp"
                android:layout_height="70dp" />


        </LinearLayout>

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_shadow_azul"
            android:text="@string/guardar"
            android:textColor="@color/design_default_color_background"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>
